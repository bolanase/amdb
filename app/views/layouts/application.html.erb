<!DOCTYPE html>
<html>
<head>
  <title>Amdb</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <%= link_to "Home", root_url %> |
    <%= link_to "Directors", directors_url %> |
    <%= link_to "Movies", movies_url %> |
    <%= link_to "Roles", roles_url %> |
    <%= link_to "Actors", actors_url %> |
    <%= link_to "Votes", votes_url %> |
    <%= link_to "Users", users_url %> |
    
    <% if session["user_id"] %>
      Wazzzup, <%= User.find(session[:user_id]).name %>!
      <%= link_to "Sign Out", "/logout" %>
    <% else %>
      <%= link_to "Sign In", "/login" %> 
    <% end %>
  </nav>
  <%= yield %>

</body>
</html>
